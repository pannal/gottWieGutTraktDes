<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.GottWieGutTraktDes"
    name="GottWieGutTraktDes"
    version="0.6.5.3b"
    provider-name="pannooney">
    <requires>
        <import addon="xbmc.python" version="2.0"/>
        <import addon="script.module.simplejson" version="2.0.10"/>
        <import addon="script.module.myconnpy" version="0.3.2"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>video</provides>
    </extension>
    <res width="1280" height="720" aspect="16x9" default="true" folder="720p" />
    <extension point="xbmc.service" name="GottWieGutTraktDes.service" library="service.py"/>
    <extension point="xbmc.addon.repository" name="Manromen XBMC Addons testing">
        <info compressed="true">http://dl.dropbox.com/u/1711476/XBMC-Repository-devel/addons.xml</info>
        <checksum>http://dl.dropbox.com/u/1711476/XBMC-Repository-devel/addons.xml.md5</checksum>
        <datadir zip="true">http://dl.dropbox.com/u/1711476/XBMC-Repository-devel</datadir>
    </extension>
    <extension point="xbmc.addon.metadata" name="GottWieGutTraktDes.metadata">
        <summary lang="en">use trakt without stalking</summary>
        <description lang="en">GottWieGutTraktDes - Trakt Utilities Knackwurst Edition
Synchronise Movies / TVShows with Trakt (more infos and account creation: http://trakt.tv/).

Actually this is a replacement for the core Trakt and the community-driven Trakt.Utilities plugin.
Thanks to anyone who contributed to the original Trakt.Utilities and the authors of it.
        </description>
        <platform>all</platform>
    </extension>
</addon>
